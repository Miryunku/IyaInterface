<UserControl x:Class="Iya.MyUserControls.CollectionBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Iya.MyUserControls"
             mc:Ignorable="d" 
             d:DesignWidth="500" d:DesignHeight="450" Background="#FF192F42"
             MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    
    <Border Name="bdrBorder" BorderThickness="2" BorderBrush="Gainsboro">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Margin="10,5,10,5" Name="tblName" FontSize="16" Foreground="WhiteSmoke"/>

            <StackPanel Grid.Row="1" Margin="10,0,10,5" VerticalAlignment="Top">
                <TextBlock Name="tblDateDetails" Foreground="WhiteSmoke"/>
                <TextBlock Name="tblContentDetails" Foreground="WhiteSmoke"/>
            </StackPanel>

            <Rectangle Grid.Row="2" Margin="10,0,10,5" Height="15" Name="rtgColor" HorizontalAlignment="Stretch"/>
        </Grid>
    </Border>
</UserControl>
