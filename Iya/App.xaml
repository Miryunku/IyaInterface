<Application x:Class="Iya.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Iya"
             Startup="AppStartup">
    <Application.Resources>
        <!--Resources with x:Key-->

        <SolidColorBrush x:Key="LblFgColor" Color="WhiteSmoke"/>

        <SolidColorBrush x:Key="TblFgColor" Color="WhiteSmoke"/>

        <SolidColorBrush x:Key="LtbBgColor" Color="#FF333337"/>

        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>

        <Style x:Key="TbxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF333337"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="MinHeight" Value="22"/>
        </Style>

        <!--Resources without x:Key-->

        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
        </Style>
    </Application.Resources>
</Application>
